# Window title bars & borders section
# class                  border     backgr     text       indicator  child_border
client.focused           $green     $green     $darkgray  $purple    $darkgray
client.focused_inactive  $darkgray  $darkgray  $yellow    $purple    $darkgray
client.unfocused         $darkgray  $darkgray  $gray      $purple    $darkgray
client.urgent            $red       $red       $white     $red       $red

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    i3bar_command i3bar --transparency
    status_command i3blocks -c ~/.config/i3/i3blocks.conf
    tray_output primary

    colors {
        # bar background color
        background $bgF0
        # text color used for blocks that do not have a color specified.
        statusline $gray

        # workspaces section
        # class             border   backgr.     text
        focused_workspace   $bg      $green      $darkgray
        inactive_workspace  $bg      $darkgray   $gray
        active_workspace    $bg      $darkgray   $gray
        urgent_workspace    $red     $red        $bg
    }
}

bindsym $mod+shift+x Exec i3lock --color "$bg-color"

## XF86 Key mappings ##
# Volume controls
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+10 i3blocks

# Media player controls (requires: playerctl)
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Screen Brightness (requires: brightnessctl)
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set --exponent 10%+
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set --exponent 10%-
bindsym XF86ScreenSaver exec $HOME/.config/i3/toggleDisplay.sh

bindsym XF86Calculator exec --no-startup-id galculator

exec_always --no-startup-id feh --bg-scale $HOME/Pictures/background.jpg
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

exec_always --no-startup-id numlockx on
exec picom -f
