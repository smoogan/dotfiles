URxvt.font: xft:Hack\ Nerd\ Font\ Mono:style=Regular:size=12
URxvt.boldFont: xft:Hack\ Nerd\ Font\ Mono:style=Bold:size=12
URxvt.italicFont: xft:Hack\ Nerd\ Font\ Mono:style=Italic:size=12
URxvt.boldItalicFont: xft:Hack\ Nerd\ Font\ Mono:style=Bold\ Italic:size=12

*.foreground:  #e6d4a3
*.background:  #1e1e1e
*.cursorColor: #e6d4a3
*.color0:      #1e1e1e
*.color8:      #7f7061
*.color1:      #be0f17
*.color9:      #f73028
*.color2:      #868715
*.color10:     #aab01e
*.color3:      #cc881a
*.color11:     #f7b125
*.color4:      #377375
*.color12:     #719586
*.color5:      #a04b73
*.color13:     #c77089
*.color6:      #578e57
*.color14:     #7db669
*.color7:      #978771
*.color15:     #e6d4a3

! Add transparency for URxvt background
URxvt.background:  [95]#1e1e1e

! do not scroll with output
URxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg5

URxvt.scrollBar: false
URxvt.scrollstyle: plain
URxvt.scrollBar_right: true
URxvt.saveLines: 100000

URxvt.depth: 32
